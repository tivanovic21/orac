        "/api/Objekt/GetObjektiClosestToYou": {
            "get": {
                "summary": "Dohvati najbliže objekte",
                "description": "Vraća kolekciju objekata sortirane po udaljenosti od zadane lokacije.",
                "operationId": "getObjektiClosestToYou",
                "tags": [
                    "Objekti"
                ],
                "parameters": [
                    {
                        "name": "latitude",
                        "in": "query",
                        "description": "Geografska širina lokacije korisnika",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "decimal"
                        }
                    },
                    {
                        "name": "longitude",
                        "in": "query",
                        "description": "Geografska dužina lokacije korisnika",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "decimal"
                        }
                    },
                    {
                        "name": "radiusInKm",
                        "in": "query",
                        "description": "Radijus pretrage u kilometrima (opciono)",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "double",
                            "nullable": true,
                            "minimum": 0
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Uspješno dohvaćeni obližnji objekti",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ObjektCollectionResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nema objekata u zadanom radijusu",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Greška na serveru",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
