        "/api/Objekt/GetFiltered": {
            "get": {
                "summary": "Filtriraj objekte",
                "description": "Dohvaća filtriranu kolekciju objekata prema zadanim kriterijima pretrage (naziv, opis, dostava, cijenovni rang, ocjena).",
                "operationId": "getFilteredObjekti",
                "tags": [
                    "Objekti"
                ],
                "parameters": [
                    {
                        "name": "searchTerm",
                        "in": "query",
                        "description": "Pojam za pretragu",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": ""
                        }
                    },
                    {
                        "name": "searchField",
                        "in": "query",
                        "description": "Polje za pretragu (wildcard, naziv, opis)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "wildcard",
                            "enum": [
                                "wildcard",
                                "naziv",
                                "opis"
                            ]
                        }
                    },
                    {
                        "name": "dostupnaDostava",
                        "in": "query",
                        "description": "Filter za dostupnost dostave",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "nullable": true
                        }
                    },
                    {
                        "name": "cjenovniRang",
                        "in": "query",
                        "description": "Filter za cijenovni rang (€, €€, €€€)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "nullable": true,
                            "enum": [
                                "€",
                                "€€",
                                "€€€"
                            ]
                        }
                    },
                    {
                        "name": "minOcjena",
                        "in": "query",
                        "description": "Minimalna prosječna ocjena",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "decimal",
                            "nullable": true,
                            "minimum": 0,
                            "maximum": 5
                        }
                    },
                    {
                        "name": "maxOcjena",
                        "in": "query",
                        "description": "Maksimalna prosječna ocjena",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "decimal",
                            "nullable": true,
                            "minimum": 0,
                            "maximum": 5
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Uspješno dohvaćeni filtrirani objekti",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ObjektCollectionResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nema objekata koji odgovaraju kriterijima",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Greška na serveru",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
