            "SuccessResponse": {
                "type": "object",
                "required": [
                    "status",
                    "message",
                    "response"
                ],
                "properties": {
                    "status": {
                        "type": "string",
                        "enum": [
                            "success"
                        ],
                        "description": "Status odgovora"
                    },
                    "message": {
                        "type": "string",
                        "description": "Poruka o uspješnoj operaciji"
                    },
                    "response": {
                        "type": "string",
                        "nullable": true
