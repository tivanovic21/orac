    "components": {
        "schemas": {
            "ObjektDto": {
                "type": "object",
                "required": [
                    "idObjekta",
                    "tipObjektaId",
                    "kontaktId",
                    "naziv",
                    "dostupnaDostava",
                    "datumUnosa"
                ],
                "properties": {
                    "idObjekta": {
                        "type": "integer",
                        "format": "int32",
                        "description": "Jedinstveni identifikator objekta"
                    },
                    "tipObjektaId": {
                        "type": "integer",
                        "format": "int32",
                        "description": "ID tipa objekta (kafić, restoran, itd.)"
                    },
                    "kontaktId": {
                        "type": "integer",
                        "format": "int32",
                        "description": "ID kontakta objekta"
                    },
                    "naziv": {
                        "type": "string",
                        "description": "Naziv objekta"
                    },
                    "opis": {
                        "type": "string",
                        "nullable": true,
                        "description": "Opis objekta"
                    },
                    "prosjecnaOcjena": {
                        "type": "number",
                        "format": "decimal",
                        "nullable": true,
                        "minimum": 0,
                        "maximum": 5,
                        "description": "Prosječna ocjena korisnika"
                    },
                    "cjenovniRang": {
                        "type": "string",
                        "nullable": true,
                        "enum": [
                            "€",
                            "€€",
                            "€€€"
                        ],
                        "description": "Cijenovni rang objekta"
                    },
                    "vlasnik": {
                        "type": "string",
                        "nullable": true,
                        "description": "Vlasnik objekta"
                    },
                    "dostupnaDostava": {
                        "type": "boolean",
                        "description": "Dostupnost usluge dostave"
                    },
                    "datumUnosa": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Datum unosa u bazu"
                    },
                    "tipObjekta": {
                        "$ref": "#/components/schemas/TipObjektaDto"
                    },
                    "kontakt": {
                        "$ref": "#/components/schemas/KontaktDto"
                    },
                    "lokacije": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/LokacijaDto"
                        },
                        "description": "Lista lokacija objekta"
                    },
                    "objektTagovi": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ObjektTagDto"
                        },
                        "description": "Lista tagova objekta"
                    }
                }
            },
            "TipObjektaDto": {
                "type": "object",
                "properties": {
                    "idTipaObjekta": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "nazivTipa": {
                        "type": "string"
                    }
                }
            },
            "KontaktDto": {
                "type": "object",
                "properties": {
                    "idKontakta": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "adresaElektronskePoste": {
                        "type": "string",
                        "nullable": true
                    },
                    "webStranica": {
                        "type": "string",
                        "nullable": true
                    },
                    "telefon": {
                        "type": "string",
                        "nullable": true
                    }
                }
            },
            "LokacijaDto": {
                "type": "object",
                "properties": {
                    "idLokacije": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "objektId": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "adresa": {
                        "type": "string"
                    },
                    "geografskaSirina": {
                        "type": "number",
                        "format": "decimal"
                    },
                    "geografskaDuzina": {
                        "type": "number",
                        "format": "decimal"
                    }
                }
            },
            "ObjektTagDto": {
                "type": "object",
                "properties": {
                    "objektId": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "tagId": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "tag": {
                        "$ref": "#/components/schemas/TagDto"
                    }
                }
            },
            "TagDto": {
                "type": "object",
                "properties": {
                    "idTaga": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "nazivTaga": {
                        "type": "string"
                    }
                }
            },
            "ObjektResponse": {
                "type": "object",
                "required": [
                    "status",
                    "message",
                    "response"
                ],
                "properties": {
                    "status": {
                        "type": "string",
